<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootNode" alignment="TOP_CENTER" styleClass="pane" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafxgrid.view.GridView1">
   <children>
      <BorderPane fx:id="dashBoardPane" minWidth="320.0" prefWidth="320.0" VBox.vgrow="NEVER">
         <left>
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#goToMenu" text="Back" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button fx:id="btnReset" mnemonicParsing="false" onAction="#onReset" text="Reset" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <Label text="TIME" textFill="RED" BorderPane.alignment="CENTER">
               <font>
                  <Font size="48.0" />
               </font>
               <BorderPane.margin>
                  <Insets left="20.0" right="20.0" />
               </BorderPane.margin>
            </Label>
         </center>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </BorderPane>
      <TilePane fx:id="board" prefHeight="300.0" prefWidth="300.0" />
   </children>
</VBox>
