<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafxgrid.view.GridView">
   <center>
      <GridPane id="grid" fx:id="grdBoard" gridLinesVisible="true" BorderPane.alignment="CENTER">
        
      </GridPane>
   </center>
   <top>
      <BorderPane fx:id="optionBordePane" prefHeight="43.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
         <left>
            <Button fx:id="btnBack" styleClass="rounded2-button" mnemonicParsing="false" onAction="#switchMain" text="Back" BorderPane.alignment="CENTER">
            </Button>
         </left>
         <right>
            <Button fx:id="btnReset" styleClass="rounded2-button" mnemonicParsing="false" onAction="#restart" text="Reset" BorderPane.alignment="CENTER">
            </Button>
         </right>
         <center>
            <Label fx:id="lblTime" text="0:00" textFill="#f21212" BorderPane.alignment="CENTER">
               <font>
                  <Font size="48.0" />
               </font></Label>
         </center>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </BorderPane>
   </top>
</BorderPane>
